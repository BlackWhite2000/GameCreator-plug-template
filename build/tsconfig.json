{
  "compilerOptions": {
    "target": "ES5",
    "lib": [
      "DOM",
      "ES2015"
    ],
    "rootDir": "./",
    "declaration": true,
    "declarationMap": false,
    "sourceMap": false,
    "outFile": "../dist/build/main.js",
    "removeComments": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true
  },
  "skipLibCheck": true,
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
