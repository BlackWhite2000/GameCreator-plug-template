{
  "compilerOptions": {
    "target": "ES5",
    "lib": [
      "DOM",
      "ES2015"
    ],
    "rootDir": "./",
    "declaration": true,
    "declarationMap": false,
    "sourceMap": false,
    "outFile": "../dist/main.js",
    "removeComments": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true
  },
  "skipLibCheck": true,
  "include": [
    "**/*.ts"
  ],
  "references": [
    {
      "path": "../template/Game"
    }
  ],
  "exclude": [
    "node_modules"
  ]
}